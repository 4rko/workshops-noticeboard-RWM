<% title "New Post" %>

<%= form_for @post, html: { multipart: true } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.label :remote_image_url, 'or image URL' %><br/>
    <%= f.text_field :remote_image_url %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label :tag_list %><br />
    <%= f.text_area :tag_list %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit %></p>
<% end %>


<p><%= link_to "Back to List", posts_path %></p>
