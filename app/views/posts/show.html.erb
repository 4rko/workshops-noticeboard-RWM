<% title "Post" %>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<p>
  <strong>User:</strong>
  <%= @post.user.name %>
</p>
<% if @post.address.present? %>
<p>
  <strong>Location:</strong>
  <%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@post.latitude} #{@post.longitude}" %>
</p>
<% end %>

<p id='comments'>
  <strong>Comments:</strong>
  <%= render @post.comments %>
</p>

<p id='adding_comment'>
  <% if user_signed_in? %>
    <%= link_to 'Add your comment', new_post_comment_path(@post), remote: true, id: 'add_comment_link' %>
  <% else %>
    Please sign in to comment.
  <% end %>
</p>

<p>
  <%= link_to "View All", posts_path %>
</p>
